{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2015",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "baseUrl": "./src",
    "paths": {
      "@entities": ["entities"],
      "@helpers": ["helpers"],
      "@models": ["models"],
      "@routes": ["routes"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
