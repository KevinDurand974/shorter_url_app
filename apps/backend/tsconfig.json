{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2015",
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": "./src",
    "paths": {
      "@entities": ["entities"],
      "@helpers": ["helpers"],
      "@models": ["models"],
      "@procedures": ["procedures"],
      "@libs/*": ["libs/*"]
    },
    "moduleResolution": "Node",
    "module": "CommonJS",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
